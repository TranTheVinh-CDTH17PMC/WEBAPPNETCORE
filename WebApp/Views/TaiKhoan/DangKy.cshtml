@model WebApp.Areas.Admin.Models.TaiKhoanViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/ACE_Layout.cshtml";
}

<link rel="stylesheet" href="~/Login/fonts/material-icon/css/material-design-iconic-font.min.css">

<!-- Main css -->
<link rel="stylesheet" href="~/Login/css/style.css">
<style>
    .container-content {
        width: 1300px;
        background: #fff;
        margin: 0 auto;
    }
</style>
<div class="main">

    <!-- Sign up form -->
    <section class="signup">
        <div class="container-content">
            <div class="signup-content">
                <div class="signup-form">
                    <h2 class="form-title">Đăng ký</h2>
                    <form method="POST" class="register-form" id="register-form">
                        <div class="form-group">
                            <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            <input type="text" name="HoVaTen" id="name" placeholder="Họ và Tên" />
                        </div>
                        <div class="form-group">
                            <label for="email"><i class="zmdi zmdi-email"></i></label>
                            <input type="email" name="TenTaiKhoan" id="email" placeholder="Tên Đăng Nhập" />
                        </div>
                        <div class="form-group">
                            <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                            <input type="password" name="MatKhau" id="pass" placeholder="Mật khẩu" />
                        </div>
                        <div class="form-group">
                            <label for="re-pass"><i class="zmdi zmdi-gps-dot"></i></label>
                            <input type="password" name="DiaChi" id="re_pass" placeholder="Địa chỉ nhận hàng" />
                        </div>
                        <div class="form-group">
                            <label for="re-pass"><i class="zmdi zmdi-phone"></i></label>
                            <input type="password" name="Sdt" id="re_pass" placeholder="Số điện thoại" />
                        </div>

                        <div class="form-group form-button">
                            <input type="submit" name="signup" id="signup" class="form-submit" value="Đăng ký" />
                        </div>
                    </form>
                </div>
                <div class="signup-image">
                    <figure><img src="https://thumbs.dreamstime.com/b/business-idea-concept-light-bulb-as-metaphor-brainstorm-teamwork-creative-mind-flat-vector-illustration-123153843.jpg" alt="sing up image"></figure>
                </div>
            </div>
        </div>
    </section>
</div>

<script src="~/Login/vendor/jquery/jquery.min.js"></script>
<script src="~/Login/js/main.js"></script>